[module/powermenu]
;;
type = custom/menu

expand-right = true

format-spacing = 1

label-open = 
label-open-foreground = ${colors.white}
;label-open-margin = 1
label-close = 
label-close-foreground = ${colors.gb-red}
;label-separator = |
label-separator-foreground = ${colors.foreground-alt}
;
menu-0-0 = " SHUTDOWN "
menu-0-0-margin = 0
menu-0-0-padding = 1
menu-0-0-exec = systemctl poweroff
menu-0-1 = " REBOOT "
menu-0-1-margin = 0
menu-0-1-padding = 1
menu-0-1-exec = systemctl reboot
menu-0-2 = " LOGOUT"
menu-0-2-margin = 0
menu-0-2-padding = 1
menu-0-2-exec = ~/.config/polybar/logout.sh

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = sudo reboot

menu-2-0 = cancel
menu-2-0-exec = sudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

