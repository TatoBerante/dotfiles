#! /bin/sh

pgrep -x sxhkd > /dev/null || sxhkd &

$HOME/.config/bspwm/displays.sh &
killall "dunst"
/usr/bin/dunst &
#setxkbmap latam &
killall "nitrogen"
nitrogen --set-zoom-fill --random $HOME/Pictures/Backgrounds/ &
$HOME/.config/polybar/launch.sh &
xdg-screensaver suspend 0x6c8 &
picom -CGb --backend glx &

bspc monitor HDMI-A-0 -d 1 2 3 4 5 6 7 8 9
bspc monitor DisplayPort-0 -d 0

# Gruvbox theme
#bspc config focused_border_color "#fe8019"

# Dracula theme
#bspc config normal_border_color "#44475a"
#bspc config active_border_color "#bd93f9"
#bspc config focused_border_color "#ff79c6"
#bspc config presel_feedback_color "#6272a4"
# Dracula cyan border:
#bspc config active_border_color "#6272a4"
#bspc config focused_border_color "#8be9fd"

# Nordic border:
bspc config active_border_color "#4c566a"
bspc config focused_border_color "#88c0d0"

bspc config border_width          3
bspc config window_gap            10
bspc config split_ratio           0.59
bspc config click_to_focus        true
bspc config focus_by_distance     true
bspc config focus_follows_pointer true
bspc config borderless_monocle    true
bspc config gapless_monocle       true

bspc rule -a Gimp desktop='^9' follow=on
bspc rule -a filezilla desktop='^8' follow=on
#bspc rule -a Chromium desktop='^8'
bspc rule -a galculator state=floating
bspc rule -a Kupfer.py focus=on
bspc rule -a Screenkey manage=off
